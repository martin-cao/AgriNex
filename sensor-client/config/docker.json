{
  "client_id": "agrinex_sensor_docker",
  "debug": false,
  "mqtt": {
    "host": "mosquitto",
    "port": 1883,
    "username": null,
    "password": null,
    "keepalive": 60,
    "qos": 1,
    "retain": false
  },
  "serial": {
    "ports": ["/dev/ttyS0", "/dev/ttyS1", "/dev/ttyS2"],
    "baudrate": 9600,
    "timeout": 1.0,
    "auto_detect": true,
    "simulation_mode": true
  },
  "sensor": {
    "collection_interval": 30.0,
    "data_format": "json",
    "include_metadata": true,
    "quality_checks": true,
    "mock_data_generation": true
  },
  "camera": {
    "enabled": true,
    "device_id": 0,
    "resolution": [640, 480],
    "fps": 30,
    "format": "jpg",
    "quality": 95,
    "auto_capture_interval": 60.0,
    "simulation_mode": true,
    "save_local": false,
    "upload_to_storage": true
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file_path": null,
    "max_file_size": 10485760,
    "backup_count": 5
  }
}
